<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="dplus2.View.MainPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:drawable="clr-namespace:dplus2.Model"
	xmlns:viewmodel="clr-namespace:dplus2.ViewModel">

	<ContentPage.BindingContext>
		<viewmodel:MainPageViewModel />
	</ContentPage.BindingContext>

	<ContentPage.Resources>
		<Style TargetType="Label">
			<Setter Property="FontAttributes" Value="Bold" />
			<Setter Property="FontSize" Value="20" />
		</Style>
		<Style TargetType="Entry">
			<Setter Property="Margin" Value="0,20,0,20" />
		</Style>
		<drawable:GraphicsDrawable x:Key="graphicsDrawable" />
	</ContentPage.Resources>

	<ScrollView>
		<VerticalStackLayout>

			<Label Text="Preço inicial" />
			<Entry Text="{Binding PrecoInicial}" />

			<Label Text="Volatilidade" />
			<Entry Text="{Binding Volatilidade}" />

			<Label Text="Média do retorno" />
			<Entry Text="{Binding MediaRetorno}" />

			<Label Text="Tempo &#10;(duração do gerador de preços)" />
			<Entry Text="{Binding Tempo}" />

			<Button
				x:Name="BtnSimulacao"
				FontAttributes="Bold"
				HorizontalOptions="Fill"
				Text="Gerar Simulação" />

			<GraphicsView
				Drawable="{StaticResource graphicsDrawable}"
				HeightRequest="300"
				WidthRequest="400" />
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
